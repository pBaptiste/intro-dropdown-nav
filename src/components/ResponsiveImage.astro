---
import { getImage } from "astro:assets";

const { imgMobile, imgDesktop, alt } = Astro.props;

const mobileImg = await getImage({
    src: imgMobile,
    format: 'webp',
    width: 375,
    height: 281.25,
})

const desktopImg = await getImage({
    src: imgDesktop,
    format: 'webp',
    width: 480,
    height: 640,
})
---

<picture>
    <source media="(max-width: 767px)" src={mobileImg.src} />
    <source media="(min-width: 768px)" src={desktopImg.src} />
    <img src={desktopImg.src} alt={alt} class="w-full h-full object-cover">
</picture>